site_name: {{ project_name | title }} # Using title filter for proper capitalization
site_url: https://{{ user_name | slugify }}.github.io/{{ project_name | slugify }}/ # Automatic GitHub Pages URL
site_description: {{ description }}
site_author: {{ user_name }}

docs_dir: docs
repo_name: {{ project_name }}
repo_url: https://github.com/{{ user_name | slugify }}/{{ project_name | slugify }}

# Theming
theme:
  name: material
  features:
    - announce.dismiss
    - content.code.annotate
    - content.code.copy
    - content.code.select # Required for select buttons in code blocks
    - content.tabs.link
    - content.tooltips
    - header.autohide
    - navigation.expand
    - navigation.footer
    - navigation.indexes
    - navigation.instant
    - navigation.sections
    - navigation.top
    - navigation.tracking
    - search.highlight
    - search.share
    - search.suggest
    - toc.follow
    - toc.integrate
  palette:
    - media: "(prefers-color-scheme)"
      toggle:
        icon: material/brightness-auto
        name: Switch to light mode
    - media: "(prefers-color-scheme: light)"
      scheme: default
      primary: teal
      accent: deep orange
      toggle:
        icon: material/brightness-7
        name: Switch to dark mode
    - media: "(prefers-color-scheme: dark)"
      scheme: slate
      primary: teal
      accent: deep orange
      toggle:
        icon: material/brightness-4
        name: Switch to system preference
  # favicon: assets/favicon.png # Placeholder, should be in docs/assets
  icon: # Added this block
    repo: fontawesome/brands/github # Specifies the GitHub icon for the repository link
    logo: material/book-open-variant # Default logo icon

# Extensions for Markdown
markdown_extensions:
  - admonition # For call-out boxes (notes, tips, warnings)
  - attr_list # For adding attributes to markdown elements
  - md_in_html # Allows Markdown inside HTML blocks
  - pymdownx.highlight: # Code highlighting
      anchor_linenums: true
      line_spans: __span
      pygments_lang_class: true
  - pymdownx.inlinehilite # Inline code highlighting
  - pymdownx.snippets # Include content from other files
  - pymdownx.superfences # Enhanced code blocks
  - pymdownx.details # Collapsible sections
  - pymdownx.arithmatex: # LaTeX math rendering
      generic: true
  - pymdownx.tabbed: # Tabbed content
      alternate_style: true
  - pymdownx.emoji: # Emoji support
      emoji_index: !!python/name:material.extensions.emoji.twemoji
      emoji_generator: !!python/name:material.extensions.emoji.to_svg
  - pymdownx.keys # Keyboard keys
  - pymdownx.mark # Highlight text
  - pymdownx.tilde # Subscript and Superscript
  - toc: # Table of Contents
      permalink: true
      toc_depth: 3
  - def_list # Definition Lists
  - footnotes # Footnotes
  - pymdownx.extra # Generic PyMdown Extensions extra


# Plugins
plugins:
  - search:
      lang: en
  - minify: # Minify HTML, CSS, JS
      minify_html: true
      minify_js: true
      minify_css: true
      html_safe: true
  - git-revision-date-localized: # Show last updated date
      enable_creation_date: true
  - glightbox # Lightbox for images
  - privacy # Privacy features (e.g., youtube-nocookie)
  - redirects: # Simple URL redirects
      redirect_maps:
        # 'old_path.md': 'new_path.md'
  - tags: # For creating tags
      tags_file: tags.md # Where the tags page will be generated

# Extra configuration (social cards, analytics etc.)
extra:
  social:
    - icon: fontawesome/brands/github
      link: https://github.com/{{ user_name | slugify }}/{{ project_name | slugify }}
      name: {{ project_name | title }} on GitHub

# Copyright information
copyright: Copyright &copy; {{ '%Y-%m-%d %H:%M:%S' | strftime }} {{ user_name }}
